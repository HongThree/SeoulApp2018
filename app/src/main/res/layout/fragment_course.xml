<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/snackbar_contaner"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--android:background=>-->

    <com.imangazaliev.circlemenu.CircleMenu
        android:id="@+id/circle_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:hintsEnabled="true">

        <com.imangazaliev.circlemenu.CircleMenuButton
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:colorNormal="#FF9800"
            app:colorPressed="#FB8C00"
            app:hintText="one"

            app:icon="@drawable/ic_one" />

        <com.imangazaliev.circlemenu.CircleMenuButton
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:colorNormal="#f5089f"
            app:colorPressed="#90ea1f8e"
            app:hintText="two"
            app:icon="@drawable/ic_two" />

        <com.imangazaliev.circlemenu.CircleMenuButton
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:colorNormal="#2196F3"
            app:colorPressed="#1E88E5"
            app:hintText="three"
            app:icon="@drawable/ic_three" />

        <com.imangazaliev.circlemenu.CircleMenuButton
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:colorNormal="#4CAF50"
            app:colorPressed="#43A047"

            app:hintText="four"
            app:icon="@drawable/ic_four" />

        <com.imangazaliev.circlemenu.CircleMenuButton
            android:id="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:colorNormal="#9C27B0"
            app:colorPressed="#8E24AA"
            app:hintText="five"
            app:icon="@drawable/ic_five" />

        <com.imangazaliev.circlemenu.CircleMenuButton
            android:id="@+id/six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:colorNormal="#F44336"
            app:colorPressed="#E53935"
            app:hintText="six"
            app:icon="@drawable/ic_six" />

        <com.imangazaliev.circlemenu.CircleMenuButton
            android:id="@+id/seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:colorNormal="#5f3e0d"
            app:colorPressed="#5a3404"
            app:hintText="seven"
            app:icon="@drawable/ic_seven" />

        <com.imangazaliev.circlemenu.CircleMenuButton
            android:id="@+id/eight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:colorNormal="#050e74"
            app:colorPressed="#0a0559"
            app:hintText="eight"
            app:icon="@drawable/ic_eight" />

    </com.imangazaliev.circlemenu.CircleMenu>

</RelativeLayout>